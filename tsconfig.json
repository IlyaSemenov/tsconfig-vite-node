{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vite Node",

  "compilerOptions": {
    // Always use ESNext (meaning whatever the current Node interpreter supports).
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",

    // Allow relative imports without having to specify file extensions.
    "moduleResolution": "Bundler",

    // Modern strictness setup.
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // Never need to emit anything with Vite.
    "noEmit": true,

    // Generic reasonable Node settings, copy/pasted from @tsconfig/node20.
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
